<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_Holder_rvRowContadores_MainAc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorContainer"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/holder_imageView_iconHolder_rvRowContadores_MainAc"
                android:layout_width="@dimen/_31sdp"
                android:layout_height="@dimen/_31sdp"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardBackgroundColor="?attr/colorPrimary">
                <ImageView
                    android:id="@+id/imageView_iconHolder_rvRowContadores_MainAc"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/water_drop"
                    app:tint="?attr/buttonTint"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/textView_NameOrAddress_rvRowContadores_MainAc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome/Morada"
                android:layout_toEndOf="@+id/holder_imageView_iconHolder_rvRowContadores_MainAc"
                android:paddingLeft="@dimen/_11sdp"
                android:paddingTop="@dimen/_11sdp"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textColor="?attr/textColorPrimary"/>
            <TextView
                android:id="@+id/textView_AddressOrId_rvRowContadores_MainAc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Morada/ID"
                android:layout_below="@+id/textView_NameOrAddress_rvRowContadores_MainAc"
                android:layout_toEndOf="@+id/holder_imageView_iconHolder_rvRowContadores_MainAc"
                android:paddingLeft="@dimen/_11sdp"
                android:paddingBottom="@dimen/_11sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="?attr/textColorPrimary"/>
            <ImageView
                android:id="@+id/imageView_iconHolder2_rvRowContadores_MainAc"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_14sdp"
                android:padding="@dimen/_3sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/radios_button_icon" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>